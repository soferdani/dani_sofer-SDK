{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "target": "es2017",                                  
    "module": "commonjs",                     
    "outDir": "dist",            
    "esModuleInterop": true,         
    "forceConsistentCasingInFileNames": true,      
    "strict": true,                               
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
